@{
    ViewData["Title"] = "Images";
}

<h1>@ViewData["Title"]</h1>

<h2>Images available for viewing.</h2>

<table>
    <tr>
        <th>Rover</th>
        <th>Date</th>
        <th>Image</th>
    </tr>

    @foreach (NASARoverAPI.Types.ImageData image in (List<NASARoverAPI.Types.ImageData>)ViewData["Images"])
    {
        <tr>
            <td>@image.roverName</td>
            <td>@image.date</td>
            <td><a target="popup" href="/home/getimage?location=@image.localPath" onclick="window.open('/home/getimage?location=@image.localPath','name','width=600,height=400')">@image.filename</a></td>
        </tr>
    }
</table>
